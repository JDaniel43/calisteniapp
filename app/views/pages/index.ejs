  <%- include ('../partials/footer') %>
  <!-- Modal -->
  <div class="modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header bg-dark">
          <h1 class="modal-title text-white text-center" id="exampleModalLongTitle">¡Selecciona la intencidad de entrenamiento!</h1>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
        
            <br>
          <a href="#" id="intensidadBasico" class="btn btn-outline-success btn-lg  d-flex justify-content-center" role="button" aria-pressed="true"><h1>Basico</h1></a>
          <h4 class="text-white">--</h4>  
    
          <a href="#" id="intensidadIntermedio" class="btn btn-outline-warning  btn-lg  d-flex justify-content-center" role="button" aria-pressed="true"><h1>Intermedio</h1></a>
          <h4 class="text-white">--</h4>
         
          <a href="#" id="intensidadAvanzado" class="btn btn-outline-danger btn-lg  d-flex justify-content-center" role="button" aria-pressed="true"><h1>Avanzado</h1></a>
          <h4 class="text-white">--</h4>
          
            <!-- Modal <input class="" type="radio" name="rama" value="1"> <h2>Basico</h2>
