            <input class="" type="radio" name="rama" value="3"> <h2>Avanzado</h2>-->
        
        </div>
    
        <div class="modal-footer d-flex justify-content-between bg-dark">
          <button id="buttonVuamos" type="button" class="btn btn-primary" disabled><h1>¡Vuamos!</h1></button>
          <button type="button" class="btn btn-danger " data-dismiss="modal"><h1>Atras</h1></button>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    var tipoEntrenamiento = ""
    var intencidad = ""
    $(".entrenamiento").on('click', function () {
        tipoEntrenamiento=this.id;
    } )
    $("#intensidadBasico").on('click', function(){
      intencidad="basico"
      $('#buttonVuamos').removeAttr('disabled');
    })
    $("#intensidadIntermedio").on('click', function(){
      intencidad="intermedio"
      $('#buttonVuamos').removeAttr('disabled');
    })
    $("#intensidadAvanzado").on('click', function(){
      intencidad="avanzado"
      $('#buttonVuamos').removeAttr('disabled');
    })

    $("#buttonVuamos").on('click',()=>{
      location.href='/web/entrenamiento/'+tipoEntrenamiento+"/" +intencidad;
    })



  </script>

